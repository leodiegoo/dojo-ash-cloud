{
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": ["prettier"],
    "extends": ["prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "configure": {
        "rules": {
            "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
            "class-methods-use-this": 0,
            "no-param-reassign": "off",
            "camelcase": "off"
        }
    }
}
